<h2>Editing stuff #1<%=h @stuff.subject_id %><%=h @stuff.day_id %><%=h @stuff.sn %></h2>
<p class="shortcuts"><%= link_to '< 返回', @stuff %></p>
<hr />

<% form_for(@stuff) do |f| %>
  <%= f.error_messages %>


    <%= f.hidden_field :subject_id %>
    <%= f.hidden_field :day_id %>
    <%= f.hidden_field :sn %>
    <%= f.hidden_field :status %>

  <p class="label"><%= f.label :name %></p>
  <p class="input"><%= f.text_field :name %></p>
  <p class="label"><%= f.label :note %></p>
  <p class="input"><%= f.text_field :note %></p>

  <p class="button"><%= f.submit 'Update' %></p>
<% end %>