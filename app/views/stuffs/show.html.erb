<h2>Stuff #1<%=h @stuff.subject_id %><%=h @stuff.day_id %><%=h @stuff.sn %></h2>
<p class="shortcuts"><%= link_to '< 返回', stuffs_path %></p>
<hr />

<div id="focus">
  <p class="title"><%=h @stuff.name %></p>
  <p class="description"><%=h @stuff.note %></p>
  <p class="meta"><%= @status %> / <%= @stuff.created_at.strftime("%Y 年 %m 月 %d 日") %></p>
</div>

<div id="nav">
<%= link_to '编辑', edit_stuff_path(@stuff) %> · 
<% if @stuff.status == 1 or  @stuff.status == -1 %>
<a href="#">添加错题</a> · 
<%= link_to "归档", :action => "archive", :id => @stuff %>
<% end %>
<% if @stuff.status == 0 %>
<%= link_to "激活", :action => "activate", :id => @stuff %>
<% end %>
</div>

