<h2>Today</h2>
<p class="shortcuts"><%= link_to '< 返回', :action => "index" %></p>
<hr />

<ol>
<% if @memos.size == 0 %>
  <p style="text-align: center; padding: 8px;"><%= link_to "今天还没有新增项目，请即新增", :action => "new" %></p>
<% else %>
	<% @memos.each do |m| %>
	  <li><%= link_to m.name, m %></li>
	  <% if m.t_next == nil %>
			<% @time = "N/A" %>
	  <% else %>
			<% if m.n == 1 %>
				<% @time = "#{m.t_first * 0.8}" %>
			<% else %>
				<% @time = "#{m.t_next}" %>
			<% end %>
	  <% end %>
		<span class="t"><%= link_to "#{@time} 分钟", m %></span>
	<% end %>
<% end %>
</ol>
<hr />